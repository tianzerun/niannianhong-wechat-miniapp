/* card/card.wxss */
.card {
  width: 100%;
  height: 400px;
  margin: 0 auto;
  position: relative;
  border-radius: 20px;
  background-color: #c9c9c9;
}

.top-left {
  position: absolute;
  top: 30rpx;
  left: 50rpx;
}

.card-title-wrapper {
  border-bottom-right-radius: 20px;
  border-bottom-left-radius: 20px;
  width: 100%;
  height: 200rpx;
  position: absolute;
  bottom: 0px;
  left: 0px;
  background-image: linear-gradient(#ffffffc0, #ffffff);
}

.tag {
  font-size: 35rpx;
  line-height: 49rpx;
  font-weight: bold;
  color: #000000ae;
}

.title {
  position: absolute;
  top: 50rpx;
  left: 50rpx;
  font-size: 60rpx;
  line-height: 84rpx;
  color: #000000;
}

.bg-image {
  border-radius: 20px;
  width: 100%;
  height: 100%;
}