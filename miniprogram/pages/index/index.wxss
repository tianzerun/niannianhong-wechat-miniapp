/* miniprogram/pages/landing.wxss */
.header, 
.navigation,
.collage {
  width: 90%;
}

.header {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: flex-end;
}

.logo-wrapper {
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
}

.logo-img {
  width: 150px;
  height: 50px
}

.slogan {
  font-size: 30rpx;
  line-height: 42rpx;
  color: #808080;
}

.today-date {
  display: flex;
  flex-direction: column;
  justify-content: space-evenly;
  align-items: flex-end;
}

.date {
  font-size: 30rpx;
  line-height: 42rpx;
}

.chinese-date,
.special-holiday {
  font-size: 20rpx;
  line-height: 28rpx;
}

.navigation {
  height: 200rpx;
  margin: 20rpx auto 20rpx auto;
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  justify-content: space-evenly;
  align-items: center;
  background-color: #ffffff;
  border-radius: 20rpx;
}

.nav-hovered {
  background-color: #dddddd;
  border-radius: 10%;
}

.nav-item {
  margin: 10rpx 10rpx;
  padding: 10rpx 10rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.nav-icon {
  width: 80rpx;
  height: 80rpx;
}

.nav-label {
  padding-top: 10rpx;
  font-size: 25rpx;
  line-height: 35rpx;
}
