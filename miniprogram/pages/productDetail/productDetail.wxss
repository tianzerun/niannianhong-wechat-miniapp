/* miniprogram/pages/productDetail/productDetail.wxss */
.description {
  width: 100%;
}

.info-section {
  padding: 50rpx 5vw;
  margin-bottom: 50rpx;
  background-color: #ffffff;
}

.price-wrapper {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
}

.price-tag {
  font-size: 60rpx;
  line-height: 84rpx;
}

.favoriate {
  font-size: 30rpx;
  line-height: 42rpx;
}

.title {
  font-size: 40rpx;
  line-height: 56rpx;
  font-weight: bold;
}

.sticky-bottom {
  width: 100%;
  height: 120rpx;
  position: sticky;
  z-index: 100;
  bottom: 0;
  left: 0;
  display: flex;
  border-top: 1px solid #bebebe;
  background-color: #ffffff;
  padding-top: 30rpx;
  justify-content: flex-end;
}

.purchase-btn {
  font-size: 30rpx;
  line-height: 42rpx;
  height: 42rpx;
  color: #ffffff;
  padding: 10rpx 40rpx;
  border-radius: 42rpx;
  margin-right: 30rpx;
}

